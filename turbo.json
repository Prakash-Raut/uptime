{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [".env"],
	"ui": "tui",
	"envMode": "strict",
	"globalEnv": [
		"NODE_ENV",
		"DATABASE_URL",
		"REDIS_URL",
		"BETTER_AUTH_SECRET",
		"BETTER_AUTH_URL",
		"POLAR_ACCESS_TOKEN",
		"POLAR_SUCCESS_URL",
		"CORS_ORIGIN",
		"GOOGLE_CLIENT_ID",
		"GOOGLE_CLIENT_SECRET"
	],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"env": ["DATABASE_URL"],
			"outputs": ["dist/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"generate": {
			"dependsOn": ["^generate"],
			"env": ["DATABASE_URL"],
			"cache": false
		},
		"db:migrate:dev": {
			"env": ["DATABASE_URL"],
			"inputs": ["packages/db"],
			"persistent": true
		},
		"db:migrate:deploy": {
			"cache": false,
			"env": ["DATABASE_URL"],
			"inputs": ["packages/db"]
		},
		"db:push": {
			"cache": false,
			"env": ["DATABASE_URL"],
			"inputs": ["packages/db"]
		},
		"db:seed": {
			"cache": false,
			"env": ["DATABASE_URL"],
			"inputs": ["packages/db"]
		}
	}
}
