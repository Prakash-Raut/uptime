{
	"name": "uptime",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"better-auth": "^1.3.28",
			"dotenv": "^17.2.2",
			"zod": "^4.1.11",
			"typescript": "^5.8.2",
			"tsdown": "^0.15.5",
			"@prisma/client": "^7.0.0",
			"@polar-sh/better-auth": "^1.1.3"
		}
	},
	"scripts": {
		"format": "biome check --write .",
		"prepare": "husky",
		"ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:api": "turbo -F @uptime/api dev",
		"prod:api": "turbo -F @uptime/api start",
		"db:push": "turbo -F @uptime/db db:push",
		"db:studio": "turbo -F @uptime/db db:studio",
		"db:generate": "turbo -F @uptime/db db:generate",
		"db:migrate": "turbo -F @uptime/db db:migrate",
		"db:start": "turbo -F @uptime/db db:start",
		"db:watch": "turbo -F @uptime/db db:watch",
		"db:stop": "turbo -F @uptime/db db:stop",
		"db:down": "turbo -F @uptime/db db:down"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"turbo": "^2.5.4",
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"tsdown": "^0.15.5",
		"@types/bun": "^1.2.6"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.3.1"
}
